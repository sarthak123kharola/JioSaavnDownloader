{
  "manifest_version": 3,
  "name": "JioSaavn MP4 Downloader",
  "version": "1.0",
  "permissions": ["downloads", "webRequest", "webRequestBlocking", "activeTab", "scripting"],
  "host_permissions": ["*://*.jiosaavn.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon16.png",
    "128": "icons/icon16.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon16.png",
      "128": "icons/icon16.png"
    }
  }
}
